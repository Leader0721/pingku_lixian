<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/c1c94a3</item>
        <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/c00000000</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>


    <!-- 自定义对话框样式 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 自定义 对话框 正极样式-->
    <style name="CustomDialog_Positive">
        <item name="android:textColor">@drawable/dialog_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_ok_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 自定义 对话框 负极样式-->
    <style name="CustomDialog_Nomal">
        <item name="android:textColor">@drawable/selector_text_btn_nomal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/btn_nomal_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 自定义 对话框 负极样式-->
    <style name="CustomDialog_Negative">
        <item name="android:textColor">#656565</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_cancel_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <!--popupwindow的style-->
    <style name="PopupAlpStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_top_show</item>
        <item name="android:windowExitAnimation">@anim/slide_top_hide</item>
    </style>
    <!--popupwindow的style-->
    <style name="PopupBottomStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_show</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_hide</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/c1c94a3</item>
        <item name="colorControlActivated">@color/c1c94a3</item>
    </style>

</resources>
