<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物资代码"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_wuzibm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物资名称"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_wuzimc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编目码"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_bianmum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格型号"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_guigexh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计量单位"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_jiliangdw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_zhiliangdj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="质量等级"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jihuasl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划数量"
                android:textColor="@color/red"
                android:textSize="@dimen/t18"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/c333333"
                android:textSize="@dimen/t18"/>

            <TextView
                android:id="@+id/tv_yanshousl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验收数量"
                android:textColor="@color/cf57f17"
                android:textSize="@dimen/t18"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/c333333"
                android:textSize="@dimen/t18"/>

            <TextView
                android:id="@+id/tv_shangjiasl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上架数量"
                android:textColor="@color/c2ec197"
                android:textSize="@dimen/t18"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/c999999"/>

</LinearLayout>