<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_certain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v10"
            android:layout_marginRight="@dimen/v10"
            android:background="@drawable/bg_btn"
            android:paddingLeft="@dimen/v20"
            android:paddingTop="@dimen/v10"
            android:paddingRight="@dimen/v20"
            android:paddingBottom="@dimen/v10"
            android:text="确认"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pandian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v10"
            android:layout_marginRight="@dimen/v10"
            android:background="@drawable/bg_btn_ora"
            android:paddingLeft="@dimen/v20"
            android:paddingTop="@dimen/v10"
            android:paddingRight="@dimen/v20"
            android:paddingBottom="@dimen/v10"
            android:text="编辑"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v10"
            android:layout_marginRight="@dimen/v10"
            android:background="@drawable/bg_btn_red"
            android:paddingLeft="@dimen/v20"
            android:paddingTop="@dimen/v10"
            android:paddingRight="@dimen/v20"
            android:paddingBottom="@dimen/v10"
            android:text="删除"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>