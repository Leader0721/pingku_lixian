<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物资名称"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_wuzimc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格型号"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_guigexh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货位"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_huowei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_shuliang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_zhuangtai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/v5"
        android:background="@color/c999999"/>

</LinearLayout>