<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/bg_white"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/v20">

    <LinearLayout
        android:layout_width="@dimen/v300"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/v10"
        android:layout_marginRight="@dimen/v10"
        android:layout_marginBottom="@dimen/v10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="物资名称"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t22"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物资代码"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_wuzibm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编目码"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_zhengshibmm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格型号"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_guigexh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/v10"
        android:paddingTop="@dimen/v5"
        android:paddingRight="@dimen/v10"
        android:paddingBottom="@dimen/v5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计量单位"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <TextView
            android:id="@+id/tv_jiliangdw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/v10"
        android:layout_marginRight="@dimen/v10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="数      量:"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <EditText
            android:id="@+id/et_shuliang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v10"
            android:layout_weight="1"
            android:background="@drawable/bg_search"
            android:hint="请输入验收数量(必填)"
            android:inputType="number"
            android:padding="@dimen/v10"
            android:textColor="@color/c333333"
            android:textColorHint="@color/cF71707"
            android:textSize="@dimen/t18"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/v10"
        android:layout_marginTop="@dimen/v5"
        android:layout_marginRight="@dimen/v10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="货      位:"
            android:textColor="@color/c353535"
            android:textSize="@dimen/t18"/>

        <EditText
            android:id="@+id/et_huowei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v10"
            android:layout_weight="1"
            android:background="@drawable/bg_search"
            android:hint="请输入或扫描货位码"
            android:padding="@dimen/v10"
            android:textColor="@color/c333333"
            android:textColorHint="@color/c888888"
            android:textSize="@dimen/t18"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/v5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shangjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/v10"
            android:layout_marginRight="@dimen/v10"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:padding="@dimen/v10"
            android:text="验收并上架"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>

        <TextView
            android:id="@+id/tv_yanshou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v10"
            android:layout_marginRight="@dimen/v10"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:padding="@dimen/v10"
            android:text="验收"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>

    </LinearLayout>

</LinearLayout>